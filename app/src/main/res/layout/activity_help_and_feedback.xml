<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.quarck.calnotify.ActivityHelpAndFeedback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/help_title"
            />

        <Space android:layout_height="16dp"
               android:layout_width="match_parent"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_developer"
            android:id="@+id/buttonEmailDeveloper"
            android:onClick="OnButtonEmailDeveloper"
            android:layout_gravity="center"
            />

        <Space android:layout_height="16dp"
               android:layout_width="match_parent"/>



        <!-- TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/why_question_mark"
            android:id="@+id/textViewWhy"
            android:onClick="OnTextViewWhyClick"
            android:layout_below="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:textColor="#1d3bc0"
            android:clickable="true" / -->

        <!-- TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/why2_question_mark"
            android:id="@+id/textViewWhy2"
            android:onClick="OnTextViewWhy2Click"
            android:layout_below="@+id/textView7"
            android:layout_alignParentEnd="true"
            android:textColor="#1d3bc0"
            android:clickable="true" / -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="App created with "
                android:id="@+id/textViewKotlinLbl"
                android:layout_marginBottom="6dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Kotlin Language"
                android:id="@+id/textViewKotlin"
                android:layout_marginBottom="6dp"
                android:onClick="OnTextViewKotlinClick"
                android:textColor="#1d3bc0"
                android:clickable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="App icon credit: "
                android:id="@+id/textViewCreditsLbl"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Cornmanthe 3rd"
                android:id="@+id/textViewCredits"
                android:onClick="OnTextViewCreditsClick"
                android:textColor="#1d3bc0"
                android:clickable="true"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
